# Nivaran Frontend Environment Configuration

# Backend API Configuration
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_BACKEND_URL=http://localhost:5000

# Environment
REACT_APP_ENVIRONMENT=development

# Authentication
REACT_APP_JWT_SECRET=your-jwt-secret-key
REACT_APP_TOKEN_EXPIRY=24h

# Emergency Notification Configuration
REACT_APP_EMERGENCY_PHONE_1=919150397529
REACT_APP_EMERGENCY_PHONE_2=919025363352
REACT_APP_EMERGENCY_PHONE_3=917845272736

# SMS Service Configuration
REACT_APP_SMS_SERVICE=textbelt
REACT_APP_TEXTBELT_API_KEY=textbelt
REACT_APP_TWILIO_ACCOUNT_SID=your-twilio-account-sid
REACT_APP_TWILIO_AUTH_TOKEN=your-twilio-auth-token
REACT_APP_TWILIO_PHONE_NUMBER=+1234567890

# Email Service Configuration
REACT_APP_EMAIL_SERVICE=emailjs
REACT_APP_EMAILJS_SERVICE_ID=your-emailjs-service-id
REACT_APP_EMAILJS_TEMPLATE_ID=your-emailjs-template-id
REACT_APP_EMAILJS_USER_ID=your-emailjs-user-id

# WhatsApp Configuration
REACT_APP_WHATSAPP_API_KEY=your-whatsapp-api-key

# Push Notification Configuration
REACT_APP_VAPID_PUBLIC_KEY=your-vapid-public-key

# Analytics and Monitoring
REACT_APP_GOOGLE_ANALYTICS_ID=your-ga-id
REACT_APP_SENTRY_DSN=your-sentry-dsn

# Feature Flags
REACT_APP_ENABLE_OFFLINE_MODE=true
REACT_APP_ENABLE_PUSH_NOTIFICATIONS=true
REACT_APP_ENABLE_REAL_SMS=false
REACT_APP_ENABLE_ANALYTICS=true

# Database Configuration (for reference)
# DATABASE_URL=postgresql://username:password@localhost:5432/nivaran_db
# REDIS_URL=redis://localhost:6379

# Security
REACT_APP_ENABLE_HTTPS=false
REACT_APP_CORS_ORIGIN=http://localhost:3000

# File Upload
REACT_APP_MAX_FILE_SIZE=10485760
REACT_APP_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Rate Limiting
REACT_APP_RATE_LIMIT_REQUESTS=100
REACT_APP_RATE_LIMIT_WINDOW=900000

# Logging
REACT_APP_LOG_LEVEL=info
REACT_APP_ENABLE_CONSOLE_LOGS=true
